{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "styles.d.ts",
  ],
  "exclude": ["src/**/__tests__/*"],

  "compilerOptions": {
    "composite": true,
    "noEmit": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
  }
}
